<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandedLayout"
    android:background="@drawable/card_shape"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" android:layout_width="360dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/expandedTitle"
        android:textSize="@dimen/btn_text_size"
        android:paddingLeft="@dimen/margin_text"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:layout_width="365dp"
        android:layout_height="wrap_content"></TextView>

<RelativeLayout
    android:layout_marginTop="@dimen/btn_margin_top"
    android:layout_width="@dimen/ll_width"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvQty"
        android:textSize="@dimen/btn_text_size"
        android:paddingLeft="@dimen/margin_text"
        android:layout_marginTop="@dimen/txt_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/unitId"
        android:paddingRight="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/txt_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/rate"
        android:layout_toRightOf="@+id/unitId"
        android:layout_marginLeft="@dimen/margin_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/txt_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/amount"
        android:layout_marginTop="@dimen/txt_margin_top"
        android:paddingRight="@dimen/btn_margin_top"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"></TextView>
</RelativeLayout>
</LinearLayout>